{
  "height": 350,
  "width": "container",
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/coopco/FIT3179_Vis2/master/data/rains.csv"
  },
  "transform": [
    {
      "calculate": "if(isValid(state_selection), datum[state_selection], datum.Australia)",
      "as": "Difference"
    },
    {"calculate": "datum.Difference >= 0 ? 1 : -1", "as": "sign"}
  ],
  "params": [
    {
      "name": "state_selection",
      "bind": {
        "input": "select",
        "name": "State selection: ",
        "options": [
          "Australia",
          "New South Wales",
          "Northern Territory",
          "Queensland",
          "South Australia",
          "Tasmania",
          "Victoria",
          "Western Australia"
        ],
        "labels": [
          "Australia",
          "New South Wales",
          "Northern Territory",
          "Queensland",
          "South Australia",
          "Tasmania",
          "Victoria",
          "Western Australia"
        ]
      }
    }
  ],
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "axis": {
        "offset": 5,
        "ticks": false,
        "minExtent": 10,
        "domain": false,
        "labelOverlap": true,
        "labelSeparation": 10
      }
    },
    "y": {
      "field": "Difference",
      "type": "quantitative",
      "title": "Difference from mean"
    },
    "color": {
      "field": "sign",
      "type": "nominal",
      "scale": {"domain": [-1, 1], "range": ["#CB4761", "#426680"]}
    },
    "tooltip": [
      {"field": "Year", "type": "ordinal"},
      {"field": "Difference", "type": "quantitative"}
    ]
  },
  "layer": [
    {
      "mark": "bar",
      "encoding": { 
        "stroke": {
          "condition": {"test": {"and": [{"selection": "highlight"}, "length(data(\"highlight_store\"))"]}, "value": "black"},
          "value": null
        }
      }
    },
    {
      "selection": {
        "highlight": {"type": "single", "empty": "none", "on": "mouseover"}
      },
      "mark": {
        "type": "text",
        "align": "left",
        "dx": -4,
        "yOffset": 10,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Annotation", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum.Year == 1925 || datum.Year == 1966 || datum.Year == 1974 || datum.Year == 1982 || datum.Year == 2008",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ],
  "config": {"legend": {"disable": true}}
}