{
  "width": 1000,
  "height": 350,
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/coopco/FIT3179_Vis2/master/data/temperatures.csv"
  },
  "transform": [
    {
      "calculate": "if(isValid(state_selection), datum[state_selection], datum.Australia)",
      "as": "Difference"
    },
    {"calculate": "datum.Difference >= 0 ? 1 : -1", "as": "sign"}
  ],
  "params": [
    {
      "name": "state_selection",
      "bind": {
        "input": "select",
        "name": "State selection:",
        "options": [
          "Australia",
          "New South Wales",
          "Northern Territory",
          "Queensland",
          "South Australia",
          "Tasmania",
          "Victoria",
          "Western Australia"
        ],
        "labels": [
          "Australia",
          "New South Wales",
          "Northern Territory",
          "Queensland",
          "South Australia",
          "Tasmania",
          "Victoria",
          "Western Australia"
        ]
      }
    }
  ],
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "axis": {
        "offset": 5,
        "ticks": false,
        "minExtent": 10,
        "domain": false,
        "labelOverlap": true,
        "labelSeparation": 10
      }
    },
    "y": {
      "type": "quantitative",
      "title": "Difference from mean"
    }
  },
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "y": {
          "field": "Difference",
          "type": "quantitative",
          "title": "Difference from mean"
        },
        "color": {
          "field": "sign",
          "type": "nominal",
          "scale": {"domain": [-1, 1], "range": ["#4862cb", "#CB4761"]}
        },
        "tooltip": [
          {"field": "Year", "type": "ordinal"},
          {"field": "Difference", "type": "quantitative"},
          {"field": "Global", "type": "quantitative", "title": "Global difference"}
        ]
      }
    },
    {
      "mark": {
        "type": "line",
        "stroke": "#444"
      },
      "encoding": {
        "y": {
          "field": "Global",
          "type": "quantitative"
        }
      }
    }
  ],
  "config": {"legend": {"disable": true}}
}